<Window x:Class="CrystalClearRAT.Windows.URLDownloadRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrystalClearRAT.Windows"
        mc:Ignorable="d"
        Title="URLDownloadRequestWindow" Height="120" Width="500">
    <Grid>
        <TextBox x:Name="urlTextBox" HorizontalAlignment="Left" Height="50" Margin="10,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" TextChanged="urlTextBox_TextChanged"/>
        <Button x:Name="sendButton" Content="Send" HorizontalAlignment="Left" Margin="370,29,0,0" VerticalAlignment="Top" Width="112" RenderTransformOrigin="-0.242,-0.566" Height="50" IsEnabled="False" Click="sendButton_Click"/>
        <TextBox x:Name="fileNameTextBox" HorizontalAlignment="Left" Height="50" Margin="193,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" TextChanged="fileNameTextBox_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="URL:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="193,10,0,0" TextWrapping="Wrap" Text="File name + extension" VerticalAlignment="Top"/>
    </Grid>
</Window>
